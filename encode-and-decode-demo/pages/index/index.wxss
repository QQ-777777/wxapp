/**
 *	top info
 */
.topinfo
{
	display: flex;
	flex-direction: column;
	align-items: center;
	background-color: #273b7a;
	padding: 30rpx 0 60rpx 0;
}
.topinfo .topinfo-line
{
	padding: 5rpx 0 5rpx 0;
}
.topinfo .topinfo-line-text
{
	font-size: 38rpx;
	font-weight: normal;
	color: #DDDDDD;
}
.product
{
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 80rpx 0 0 0;
}
.product .logo
{
	width: 260rpx;
	height: 260rpx;
	background-size: contain;
}
.product .link-view
{
	padding: 10rpx 0 0 0;
}
.product .link-view .link-view-button
{
	background-color: #FFFFFF;
	font-size: 34rpx;
	font-weight: normal;
	color: #273b7a;
	text-decoration: underline;
	cursor: pointer;
}
.main
{
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 100rpx 0 0 0;
}
.main .link-view .link-view-button
{
	background-color: #FFFFFF;
	font-size: 50rpx;
	font-weight: normal;
	color: #273b7a;
	text-decoration: underline;
}
swiper {
	height: 421.5rpx;
}
swiper-item image {
	width: 100%;
	height: 100%;
}
.textStyle{
	color: #273b7a;
	width: 80%;
	align-content: center;
	margin-top: 20px;
}